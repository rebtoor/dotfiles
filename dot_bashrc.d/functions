function compressPdf() {
  inputFile="${1}"
  outputFile="${HOME}/Documents/PDF/$(basename ${1})"
  gs -sDEVICE=pdfwrite -dCompatibilityLevel=1.7 -dPDFSETTINGS=/prepress -dNOPAUSE -dQUIET -dBATCH -sOutputFile=${outputFile} ${inputFile}
}

function upgrade_crc() {
  localPath=${2:-~/.local/bin}
  crcVersion="${1:-latest}"
  crcUrl=https://developers.redhat.com/content-gateway/file/pub/openshift-v4/clients/crc/${crcVersion}/crc-linux-amd64.tar.xz
  curl -sL ${crcUrl} |tar --strip-components=1 -C ${localPath} -xvJ --no-anchored crc
}
